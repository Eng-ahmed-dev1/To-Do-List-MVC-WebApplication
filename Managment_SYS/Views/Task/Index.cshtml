@model IEnumerable<TaskReadVM>

@{
    ViewData["Title"] = "Index";
}

<h1>All The Tasks</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                Id
            </th>
            <th>
            Title
            </th>
            <th>
            Description
            </th>
            <th>
            Deadline
            </th>
            <th>
            Status
            </th>
            <th>
            Priority
            </th>
            <th>
            Project
            </th>
            <th>
            TeamMember
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model) 
        {
        <tr>
                <td>@item.Id</td>
                <td>@item.Title</td>
                <td>@item.Description</td>
                <td>@item.Deadline</td>
                <td>@item.Status</td>
                <td>@item.Priority</td>
                <td>@item.ProjectId</td>
                <td>@item.TeamMemberId</td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
        }
    </tbody>
</table>
